{
  "manifest_version": 2,

  "name": "Annoying Chrome Extension",
  "description": "Make It Stop.",
  "version": "0.1",

  "browser_action": {
    "default_icon": "icon.png"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "permissions": [
    "activeTab"
  ]
}
